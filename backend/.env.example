# ── RiskMind Environment Variables ──
# Copy this file to .env and fill in your keys

# LLM Provider (at least one required for AI features)
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# Optional: fallback LLM providers
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: AWS Bedrock (for embeddings + Claude)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Database (default: SQLite in ./data/)
DATABASE_URL=sqlite+aiosqlite:///./data/riskmind.db

# ChromaDB vector store path
CHROMA_DIR=./data/chroma_db

# Environment
APP_ENV=development
